
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<h2>Index periodo</h2>

<label>Ingrese nombre Periodo:</label>
<input type="text" id="nombre" />
<input type="button" class="btn btn-warning" value="Limpiar" id="btnLimpiarP" />
<br />
<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="tabla">

</div>

@* crear un modal bootstrap 3 *@

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">ID Periodo:</td>
                        <td width="60%"><input id="txtIdPeriodo" type="text" readonly /></td>
                    </tr>
                    <tr>
                        <td width="40%">Nombre Periodo:</td>
                        <td width="60%"><input id="txtNombrePeriodo" type="text"  /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Fecha Inicio:</td>
                        <td width="60%"><input id="datepickerInicio" type="text"  /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Fecha Fin:</td>
                        <td width="60%"><input id="datepickerFin" type="text"  /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button id="btnAceptar" type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>
@*fin modal*@



<script src="~/Scripts/jquery-3.4.1.min.js"></script>

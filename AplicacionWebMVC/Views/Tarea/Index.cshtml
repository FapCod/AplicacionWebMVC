<h2>Creacion de Tareas</h2>
<label>BUSCAR POR PRIORIDAD</label>
<br />
<label for="selectBuscarP">Prioridad de Tarea</label>
<select id="selectBuscarP" class="form-control">
    <option value="0">ELIGE UNA PRIORIDAD</option>
    <option value="3">Alta</option>
    <option value="2">Media</option>
    <option value="1">Baja</option>
</select>
<button id="btnBuscar" class="btn btn-danger">BUSCAR</button>
<button id="btnLimpiar" class="btn btn-warning">LIMPIAR</button>
<br />

@*formulario*@
<form id="formulario">
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input id="titulo" type="text" class="form-control" placeholder="Tu titulo" required>
    </div>
    <div class="form-group">
        <label for="estado">Estado de Tarea</label>
        <select id="estado" class="form-control">
            <option value="1">Pendiente</option>
        </select>
    </div>
    <div class="form-group">
        <label for="notas">Notas:</label>
        <input id="notas" type="text" class="form-control" placeholder="Anota algo importante" required>
    </div>
    <div class="form-group">
        <label for="prioridad">Prioridad de Tarea</label>
        <select id="prioridad" class="form-control " required>
            <option value="3">Alta</option>
            <option value="2">Media</option>
            <option value="1">Baja</option>
        </select>
    </div>
    <div class="form-group" style="display: none">
        <label for="fechacreacion">Fecha Creacion</label>
        <input id="fechacreacion" class="form-control" type="datetime-local" disabled>
    </div>
    <div class="form-group" style="display: none">
        <label for="fechatermino">Fecha Termino</label>
        <input id="fechatermino" class="form-control" type="datetime-local" disabled>
    </div>
    <button type="submit" id="btnGuardar" class="btn btn-primary">Crear</button>
</form>
@*fin formulario*@
@*tabla*@
<div id="tabla">

</div>

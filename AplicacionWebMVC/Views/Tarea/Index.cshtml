
@{
    ViewBag.Title = "Index";
}

<h2>Creacion de Tareas</h2>

@*formulario*@
<form id="formulario">
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input id="titulo" type="text" class="form-control" placeholder="Tu titulo" required>
    </div>
    <div class="form-group" >
        <label for="estado">Estado de Tarea</label>
        <select id="estado" class="form-control">
            <option value="1">Pendiente</option>
        </select>
    </div>
    <div class="form-group" style="display: none">
        <label for="fechacreacion">Fecha Creacion</label>
        <input id="fechacreacion" class="form-control" type="datetime-local" disabled>
    </div>
    <div class="form-group" style="display: none">
        <label for="fechatermino">Fecha Termino</label>
        <input id="fechatermino" class="form-control" type="datetime-local" disabled>
    </div>
    <button type="submit" id="btnGuardar" class="btn btn-primary">Crear</button>
</form>
@*fin formulario*@
@*tabla*@
<div id="divTabla">

</div>
@*fin tabla*@

@* modal oculto *@
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="titulon" class="control-label">Titulo:</label>
                        <input type="text" class="form-control" id="titulon" required>
                    </div>
                    <div class="form-group">
                        <label for="estadon">Estado de Tarea</label>
                        <select id="estadon" class="form-control">
                            <option value="1">En proceso</option>
                            <option value="2">Terminano</option>
                        </select>
                    </div>
                    <div class="form-group" style="display: none">
                        <label for="fechacreacionn">Fecha Creacion</label>
                        <input id="fechacreacionn" class="form-control" type="datetime-local" disabled >
                    </div>
                    <div class="form-group" style="display: none">
                        <label for="fechaterminon">Fecha Termino</label>
                        <input id="fechaterminon" class="form-control" type="datetime-local" disabled>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="actualizar" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    </div>
</div>
@* fin de modal oculto *@

@* modal oculto *@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="idn" class="control-label">ID:</label>
                        <input id="idn" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label for="titulon" class="control-label obligatorio">Titulo:</label>
                        <input id="titulon" type="text" class="form-control obligatorio borrar" required>
                    </div>
                    <div class="form-group">
                        <label for="estadon">Estado de Tarea</label>
                        <select id="estadon" class="form-control">
                            <option value="1">En proceso</option>
                            <option value="2">Terminano</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="notasn">Notas:</label>
                        <input id="notasn" type="text" class="borrar form-control obligatorio" placeholder="Anota algo importante" required>
                    </div>
                    <div class="form-group">
                        <label for="prioridadn">Prioridad de Tarea</label>
                        <select id="prioridadn" class="borrar form-control obligatorio" required>
                            <option value="3">Alta</option>
                            <option value="2">Media</option>
                            <option value="1">Baja</option>
                        </select>
                    </div>
                    <div class="form-group" >
                        <label for="fechacreacionn">Fecha Creacion</label>
                        <input id="fechacreacionn" class="form-control" type="text" >
                    </div>
                    <div class="form-group" >
                        <label for="fechaterminon">Fecha Termino</label>
                        <input id="fechaterminon" class="form-control" type="text" >
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="Editar()" id="actualizar" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    </div>
</div>
@* fin de modal oculto *@
